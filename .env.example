# Mr.Clean Professional Actuarial Platform
# Environment Variables Configuration

# ===== API KEYS =====
# Federal Reserve Economic Data (FRED) API
# Get free key at: https://fred.stlouisfed.org/docs/api/api_key.html
FRED_API_KEY=your-fred-api-key-here

# Alpha Vantage Financial Data API  
# Get free key at: https://www.alphavantage.co/support/#api-key
ALPHA_VANTAGE_KEY=your-alpha-vantage-key-here

# OpenAI API for PriceRe Chat Assistant (GPT-4o mini)
# Get key at: https://platform.openai.com/api-keys
# Enables intelligent conversations about reinsurance, data cleaning, and platform guidance
OPENAI_API_KEY=your-openai-api-key-here
# ===== SYSTEM CONFIGURATION OVERRIDES =====
# Override any config value using MRCLEAN_SECTION_KEY format

# System settings
MRCLEAN_SYSTEM_ENVIRONMENT=development
MRCLEAN_SYSTEM_DEBUG_MODE=true

# Business settings
MRCLEAN_BUSINESS_COMPANY_NAME="Your Insurance Company"
MRCLEAN_BUSINESS_REGULATORY_JURISDICTION=US

# Data source settings
MRCLEAN_DATA_SOURCES_FRED_API_TIMEOUT_SECONDS=30
MRCLEAN_DATA_SOURCES_ALPHA_VANTAGE_REFRESH_INTERVAL_HOURS=1

# Model settings
MRCLEAN_MODELS_MORTALITY_ENHANCEMENT_AUTO_RETRAIN=true
MRCLEAN_MODELS_LAPSE_PREDICTION_VALIDATION_THRESHOLD=0.80

# ===== ADVANCED CONFIGURATION =====
# Logging level
LOG_LEVEL=INFO

# Cache settings  
CACHE_TTL_HOURS=24
MAX_CONCURRENT_CALCULATIONS=10

# Security settings
SESSION_TIMEOUT_MINUTES=120
AUDIT_LOGGING=true
